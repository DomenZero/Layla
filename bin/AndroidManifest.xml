<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lepotuli.layla.vogame"
    android:versionCode="1"
    android:versionName="1.0"
    >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk 
        android:minSdkVersion="14" 
        android:targetSdkVersion="21" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="false"
        android:theme="@style/DarkTheme" 
        
        >
        <activity
            android:label="@string/app_name"
            android:name="com.lepotuli.layla.vogame.MainActivity"
            >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lepotuli.layla.vogame.AboutActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        
       	<activity
            android:name="com.lepotuli.layla.vogame.NumPlayerActivity"
            android:label="@string/app_name_num_players"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        
        <activity
            android:name="com.lepotuli.layla.vogame.RatingActivity"
            android:label="@string/app_name_rating" >
        </activity>
        <activity
            android:name="com.lepotuli.layla.vogame.ControlActivity"
            android:windowSoftInputMode="adjustPan" 
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="com.lepotuli.layla.vogame.FragmentGameActivity"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="com.lepotuli.layla.vogame.ListPlayerWithHistoryActivity"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="com.lepotuli.layla.vogame.SettingsDelActivity"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>